@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    private async Task CloseModal()
    {
        await OnClose.InvokeAsync();
    }

}

<div class="fixed inset-0 z-50 overflow-auto bg-black bg-opacity-50 flex items-center justify-center">
    <div class="relative p-8 bg-white w-full max-w-lg m-auto flex-col flex rounded-lg shadow-lg">
        <!-- Close Button -->
        <button class="absolute top-0 right-0 p-2 text-gray-600" @onclick="CloseModal">
            <i class="fa fa-times"></i>
        </button>
        <!-- Modal Content -->
        @ChildContent
    </div>
</div>