@code {
    [Parameter] public int PageNumber { get; set; }
    [Parameter] public int TotalPages { get; set; }
    [Parameter] public EventCallback<int> OnPageChanged { get; set; }

    private async Task SetPage(int pageNumber)
    {
        if (pageNumber >= 1 && pageNumber <= TotalPages)
        {
            await OnPageChanged.InvokeAsync(pageNumber);
        }
    }
}

<div class="pagination">
    <button @onclick="() => SetPage(PageNumber - 1)" disabled="@(PageNumber == 1)">Previous</button>
    <span>Page @PageNumber of @TotalPages</span>
    <button @onclick="() => SetPage(PageNumber + 1)" disabled="@(PageNumber == TotalPages)">Next</button>
</div>