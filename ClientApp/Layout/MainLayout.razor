@using Blazorise
@inherits LayoutComponentBase
@inject Theme Theme

<ThemeProvider Theme="@Theme">
    <Layout Sider>
        <LayoutSider>
            <LayoutSiderContent class="layout-sider-content">
                <NavMenu/>
            </LayoutSiderContent>
        </LayoutSider>
        <Layout>
            <LayoutHeader class="header-content" Fixed>
                <Header></Header>
            </LayoutHeader>
            <LayoutContent class="layout-content">
                @Body
            </LayoutContent>
        </Layout>
    </Layout>
</ThemeProvider>

<style>
    .header-content {
        background-color: @Theme.BackgroundOptions.Secondary;
        color: @Theme.TextColorOptions.Primary;
    }

    .layout-sider-content {
        background-color: @Theme.BackgroundOptions.Dark;
        color: @Theme.TextColorOptions.Primary;
    }

    .layout-content {
        background-color: @Theme.BackgroundOptions.Secondary;
        color: @Theme.TextColorOptions.Secondary;
    }

    .main-layout {
        background-color: @Theme.BackgroundOptions.Primary;
    }
    
    .jumbotron-layout {
        background-color: @Theme.BackgroundOptions.Light;

    }
</style>