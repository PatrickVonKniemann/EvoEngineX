@using Blazorise
@inherits LayoutComponentBase
@inject Theme Theme

<ThemeProvider Theme="@Theme">
    <Layout Sider>
        <LayoutSider>
            <LayoutSiderContent>
                <NavMenu/>
            </LayoutSiderContent>
        </LayoutSider>
        <Layout>
            <LayoutHeader Fixed>
                Header
            </LayoutHeader>
            <LayoutContent>
                @Body
            </LayoutContent>
        </Layout>
    </Layout>
</ThemeProvider>

<style>
    .header-content {
        color: @Theme.TextColorOptions.Primary;
        background-color: @Theme.BackgroundOptions.Primary;
    }
    .layout-sider-content {
        background-color: @Theme.BackgroundOptions.Primary;
        color: @Theme.TextColorOptions.Primary;
    }
</style>