@using Blazorise
@inherits LayoutComponentBase
@inject Theme Theme

<ThemeProvider Theme="@Theme">
    <Layout Sider>
        <LayoutSider>
            <LayoutSiderContent class="layout-sider-content">
                <NavMenu/>
            </LayoutSiderContent>
        </LayoutSider>
        <Layout >
            <LayoutHeader class="header-content" Fixed>
                <Header></Header>
            </LayoutHeader>
            <LayoutContent Padding="Padding.Is3" class="layout-content">
                @Body
            </LayoutContent>
        </Layout>
    </Layout>
</ThemeProvider>


<style>
    body {
        margin: 0;
        font-family: monospace;
    }


    .header-content,
    .layout-content {
        background-color: @Theme.BackgroundOptions.Secondary;
    }

    .layout-sider-content {
        background-color: linear-gradient(135deg, @Theme.BackgroundOptions.Dark, #232137); /* Dark theme color */
        color: @Theme.TextColorOptions.Primary;
    }

    .layout-content {
        color: @Theme.TextColorOptions.Secondary;
    }

    .main-layout {
        background-color: @Theme.BackgroundOptions.Primary;
    }

    .jumbotron-layout {
        background-color: @Theme.BackgroundOptions.Light;
    }

    .glass {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

</style>