@using Blazorise
@inherits LayoutComponentBase
@inject Theme Theme

<ThemeProvider Theme="@Theme">
    <Layout Sider>
        <LayoutSider>
            <LayoutSiderContent>
                <NavMenu/>
            </LayoutSiderContent>
        </LayoutSider>
        <Layout>
            <LayoutHeader Fixed>
                <Header></Header>
            </LayoutHeader>
            <LayoutContent>
                <Container>
                    @Body
                </Container>
            </LayoutContent>
        </Layout>
    </Layout>
</ThemeProvider>

<style>
    body {
        font-family: monospace;
    }
    
    .button-primary-gradient {
        background: linear-gradient(92.88deg, @Theme.ColorOptions.Primary 9.16%, @Theme.ColorOptions.Dark 64.72%);
        color: @Theme.TextColorOptions.White;
        transition: all .5s;
        text-shadow: rgba(0, 0, 0, 0.25) 0 3px 8px;
    }
    
    .button-primary-gradient:hover {
        background: linear-gradient(92.88deg, @Theme.ColorOptions.Primary 9.16%, @Theme.ColorOptions.Light 64.72%);
        box-shadow: @Theme.ColorOptions.Success 0 1px 30px;
        transition-duration: .1s;
    }
    
    .button-secondary-gradient {
        background: linear-gradient(92.88deg, @Theme.ColorOptions.Secondary, @Theme.ColorOptions.Info);
        color: @Theme.TextColorOptions.White;
        transition: all .5s;
        text-shadow: rgba(0, 0, 0, 0.25) 0 3px 8px;
    }
    
    .button-secondary-gradient:hover {
        background: linear-gradient(92.88deg, @Theme.ColorOptions.Secondary 9.16%, @Theme.ColorOptions.Info  64.72%);
        box-shadow: @Theme.ColorOptions.Success 0 1px 30px;
        transition-duration: .1s;
    }

    .b-bar-brand .b-bar-icon{
        color: @Theme.ColorOptions.Dark;
    }


    .b-bar-item:hover,
    .b-bar-item.active .b-bar-link:active,
    .b-bar-item.active .b-bar-link a {
        border-left: 1px solid @Theme.ColorOptions.Dark;
    }

    .b-bar-vertical-inline.b-bar-dark .b-bar-link.active,
    .b-bar-vertical-popout.b-bar-dark .b-bar-link.active,
    .b-bar-vertical-small.b-bar-dark .b-bar-link.active {
        border-left: 5px solid @Theme.ColorOptions.Dark;
    }
    
    .b-card{
        background-color: @Theme.BackgroundOptions.Dark;
        border-color: @Theme.BackgroundOptions.Dark;
    } 
    
    .b-card-deck .b-card-deck.b-card-body-dark{
        background-color: @Theme.BackgroundOptions.Dark;
    }   
    
</style>