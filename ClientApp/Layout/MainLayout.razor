@using Blazorise
@inherits LayoutComponentBase
@inject Theme Theme

<ThemeProvider Theme="@Theme">
    <Layout Sider>
        <LayoutSider>
            <LayoutSiderContent>
                <NavMenu/>
            </LayoutSiderContent>
        </LayoutSider>
        <Layout>
            <LayoutHeader Fixed>
                <Header></Header>
            </LayoutHeader>
            <LayoutContent>
                <Container>
                    @Body
                </Container>
            </LayoutContent>
        </Layout>
    </Layout>
</ThemeProvider>

<style>
    body {
        font-family: monospace;
    }

    .b-layout-header {
        background-color: @Theme.BackgroundOptions.Primary;
    }

    .b-layout-content {
        background-color: @Theme.BackgroundOptions.Secondary;
        text-align: center;
        color: @Theme.TextColorOptions.Primary;
    }

    .b-layout-sider {
        background-color: @Theme.ColorOptions.Primary
    }

    .button-custom {
        background-image: linear-gradient(92.88deg, @Theme.ColorOptions.Primary 9.16%, @Theme.ColorOptions.Dark 64.72%);
        border-radius: 8px;
        border-style: none;
        box-sizing: border-box;
        color: @Theme.TextColorOptions.Primary;
        cursor: pointer;
        flex-shrink: 0;
        height: 2rem;
        padding: 0 1.6rem;
        text-align: center;
        text-shadow: rgba(0, 0, 0, 0.25) 0 3px 8px;

    }

    .button-custom:hover {
        box-shadow: rgba(80, 63, 205, 0.5) 0 1px 30px;
        transition-duration: .1s;
    }

    .b-bar-vertical-small.b-bar-dark .b-bar-link:hover {
        color: @Theme.TextColorOptions.Primary;
        background-color: @Theme.BackgroundOptions.Secondary;
    }

    .b-bar-brand .b-bar-brand-dark .b-bar-icon {
        background-color: @Theme.BackgroundOptions.Dark;
    }

    .b-bar-vertical-inline.b-bar-dark .b-bar-link:hover,
    .b-bar-vertical-popout.b-bar-dark .b-bar-link:hover,
    .b-bar-vertical-small.b-bar-dark .b-bar-link:hover {
        color: @Theme.TextColorOptions.Primary;
        background-color: @Theme.BackgroundOptions.Secondary;
    }

    .b-bar-menu,
    .b-bar-item,
    .b-bar-start,
    .b-bar-vertical-inline.b-bar-dark .b-bar-link.active,
    .b-bar-vertical-popout.b-bar-dark .b-bar-link.active,
    .b-bar-vertical-small.b-bar-dark .b-bar-link.active {
        background-color: @Theme.BackgroundOptions.Dark;
    }


    .b-bar-item {
        color: @Theme.TextColorOptions.Secondary;
    }

    .b-bar-item:hover,
    .b-bar-item.active .b-bar-link:active,
    .b-bar-item.active .b-bar-link a {
        background-color: @Theme.BackgroundOptions.Primary;
        border-left: 1px solid @Theme.ColorOptions.Dark;
    }

    .b-bar-vertical-inline.b-bar-dark .b-bar-link.active,
    .b-bar-vertical-popout.b-bar-dark .b-bar-link.active,
    .b-bar-vertical-small.b-bar-dark .b-bar-link.active {
        color: @Theme.TextColorOptions.Primary;
        border-left: 5px solid @Theme.ColorOptions.Dark;
    }

    .b-card-body {
        background-color: @Theme.BackgroundOptions.Primary;
    }
</style>