@using DomainModels
@inject UserService UserService
@using ClientApp.Components
@using ClientApp.Services
@using ExternalDomainEntities.UserDto.Query

<div class="flex justify-between bg-white p-5 ">
    <div class="left-content flex items-center">
        <div class="inline-flex gap-x-6">
            <img class="h-14 w-14 rounded-full" src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
            <div >
                <h3 class="text-base font-semibold leading-7 tracking-tight text-gray-900">@_user.UserName</h3>
                <p class="text-sm font-semibold leading-6 text-indigo-600">@_user.Name / @_user.Language</p>
            </div>
        </div>

    </div>
    <div class="right-content pt-4">
        <GradientButton ButtonType=@ButtonType.primary ButtonText="Sign Up" Link=@Links.SignUp/>
    </div>
</div>

@code {
    private ReadUserResponse? _user;


    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        _user = await UserService.GetEntityAsync("123e4567-e89b-12d3-a456-426614174003");
    }

}